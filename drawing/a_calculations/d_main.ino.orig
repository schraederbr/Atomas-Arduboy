void loop()
{
	arduboyD.pollButtons();
	if (arduboyD.justPressed(A_BUTTON))
	{
		addAtom(index + 1, nextNum);
		generateAtomNum();
	}

	if (arduboyD.justPressed(LEFT_BUTTON))
	{
		if (index > 0)
		{
			index--;
		}
		else
		{
			index = count - 1;
		}
	}

	if (arduboyD.justPressed(RIGHT_BUTTON))
	{
		if (index < count - 1)
		{
			index++;
		}
		else
		{
			index = 0;
		}
	}
	arduboyD.clear();
	drawAtoms(atoms);
	drawLine();
	arduboyD.display();
}
